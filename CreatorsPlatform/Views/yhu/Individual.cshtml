@{
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<style>
    #CreatorDes, #CreatorNot {
        display: inline-block;
        width: 100% !important;
        height: 10vh;
    }
</style>
<link href="/css/yhu/Individual.css" rel="stylesheet" />
<div class="d-flex align-items-start row">
    <div class="nav flex-column nav-pills me-3 col-md-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        <button class="nav-link active" id="GeneralSettings" onclick="GeneralSettingsReadData()" data-bs-toggle="pill" data-bs-target="#GeneralSettings_Project" type="button" role="tab" aria-controls="GeneralSettings_Project" aria-selected="true">一般設定</button>
        <button class="nav-link" id="ConsumptionRecord" onclick=" ConsumptionRecordReadData()" data-bs-toggle="pill" data-bs-target="#ConsumptionRecord_Project" type="button" role="tab" aria-controls="ConsumptionRecord_Project" aria-selected="false">消費紀錄</button>
        <button id="NotACreator" class="nav-link" data-bs-toggle="modal" data-bs-target="#UserToCreatorModal">作者功能啟用</button>
        <button class="nav-link" id="AuthorSettings" onclick="AuthorSettingsReadData()" data-bs-toggle="pill" data-bs-target="#AuthorSettings_Project" type="button" role="tab" aria-controls="AuthorSettings_Project" aria-selected="false">作者設定</button>
        <div id="AuthorSettingsDetailed"class="mt-3" style="display: none;">
            <div class="ToMiddle" onclick="AuthorSettingsReadData()"><p>方案設定</p></div>
            <div class="ToMiddle" onclick="WorkRead()"><p>作品清單</p></div>
            <div class="ToMiddle" onclick="OrderRead()"><p>委託清單</p></div>
            <div class="ToMiddle" onclick="EventRead()"><p>活動設定</p></div>
        </div>
      </div>
    <div class="tab-content col-md-8" id="v-pills-tabContent">
        <div class="tab-pane fade show active" id="GeneralSettings_Project" role="tabpanel" aria-labelledby="GeneralSettings">
            <div class="row">
                <div class="col-md-4">
                    <h5 class="fw-bold">頭像</h5>
                    <div class="ToMiddle row">
                        <input id="AvatarUpData" style="display: none;" type="file" accept="image/*" onchange="readFile(event)" />
                        <label for="AvatarUpData">
                            <img id="Avatar" src="@((ViewBag.Avatar != null) ? ("data:image/png;base64," + ViewBag.Avatar) : "/img/Shared/person-circle.svg")">
                        </label>
                    </div>
                    <div class="ToMiddle row">
                        <button type="button" class="btn btn-primary btn-lg btn-block mt-3" data-bs-toggle="modal" data-bs-target="#exampleModal">密碼變更</button>
                    </div>                   
                </div>
                <div class="col-md-8">    
                    <form id="UserData">
                        <table class="table table-striped mt-3">
                            <tr>
                                <td> <h5><label for="UserName">使用者名稱</label></h5></td>
                                <td>
                                    <h5 id="UserNameText" class="DataShow">@ViewBag.Name</h5>
                                    <h5><input id="UserName" name="UserName" type="text" style="display: none;" class="ReviseShow" value="@ViewBag.Name"></h5>
                                </td>
                            </tr>
                            <tr>
                                <td><h5><label for="UserEMail">E-Mail</label></h5></td>
                                <td>
                                    <h5 id="UserEMailText" class="DataShow">@ViewBag.Email</h5>
                                    <h5><input id="UserEMail" name="UserEMails" type="text" style="display: none;" class="ReviseShow" value="@ViewBag.Email"></h5>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h5><button id="Revise" type="button" onclick="ReviseON()" class="DataShow btn btn-primary">修改</button></h5>
                                    <h5> <input type="submit" id="Confirm" style="display: none;" class="ReviseShow btn btn-primary" value="確認"></h5>
                                </td>
                                <td>
                                    <h5></h5>
                                    <h5><button id="Cancel" type="button" style="display: none;" class="ReviseShow btn btn-primary" onclick="ReviseOFF()">取消</button></h5>
                                </td>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="ConsumptionRecord_Project" role="tabpanel" aria-labelledby="ConsumptionRecord">
            <table class="table table-striped">
                <h5 class="fw-bold">已訂閱方案:</h5>
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">方案名稱</th>
                        <th scope="col">作者</th>
                        <th scope="col">方案描述</th>
                        <th scope="col">方案等級</th>
                        <th scope="col">方案價格</th>
                        <th scope="col">到期日</th>
                    </tr>
                </thead>
                <tbody id="ConsumptionRecord_Plan">
                  
                </tbody>  
            </table>
            <hr />
            <table id=""class="table table-striped">
                <h5 class="fw-bold">已發出委託:</h5>
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">委託名稱</th>
                            <th scope="col">作者名稱</th>
                            <th scope="col">委託訂單價格</th>
                            <th scope="col">狀態</th>
                            <th scope="col">委託訂單日期</th>
                            <th scope="col">                        </th>
                        </tr>
                    </thead>
                <tbody id="ConsumptionRecord_Entrust">
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="AuthorSettings_Project" role="tabpanel" aria-labelledby="AuthorSettings">
            <div id="PlanData">
                <h5 class="fw-bold">方案設定:</h5>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">方案名稱</th>
                            <th scope="col">方案描述</th>
                            <th scope="col">方案等級</th>
                            <th scope="col">方案價格</th>
                            <th scope="col">                </th>
                        </tr>
                    </thead>
                    <tbody id="AuthorSettings_List">
                    </tbody>
                </table>
                <hr />
                <div id="PlanDataAddButton" class="ToMiddle mt-3">
                    <svg xmlns="http://www.w3.org/2000/svg" onclick="PlanDataAddShow()" width="50" height="50" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                    </svg>
                </div>
                <div id="UserPlanForm" class="mt-3" style="display: none;">
                    <form id="PlanDataAdd">
                        <p>
                            <label for="PlanName">方案名稱</label>
                            <input id="PlanName" name="PlanName" type="text">
                            <label for="PlanPrice">方案價格</label>
                            <input id="PlanPrice" name="PlanPrice" type="text" pattern="^\d+(\.\d{1,2})?$">
                        </p>
                        <p>
                            <label for="PlanLevel">方案等級</label>
                            <select id="PlanLevel" name="PlanLevel">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </p>
                        <div class="form-group">
                            <label for="PlanDescription">方案描述</label>
                            <textarea id="PlanDescription" name="PlanDescription" class="form-control" rows="3"></textarea>
                        </div>
                        <hr />
                        <button type="button" onclick="PlanDataAddClosure()">取消</button>
                        <input type="submit" value="送出" />
                    </form>
                </div>
            </div>
            <div id="WorkData">
                <h5 class="fw-bold">作品:</h5>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">作品名稱</th>
                            <th scope="col">作品描述</th>
                            <th scope="col">方案等級</th>
                            <th scope="col">                </th>
                            <th scope="col">                </th>
                        </tr>
                    </thead>
                    <tbody id="Works_List">
                    </tbody>
                </table>
            </div>
            <div id="OrderData">
                <h5 class="fw-bold">委託方案:</h5>
                <table id="OrderProject" class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">委託名稱</th>
                            <th scope="col">委託描述</th>
                            <th scope="col">委託價格(Min)</th>
                            <th scope="col">委託價格(Max)</th>
                            <th scope="col">                </th>
                            <th scope="col">                </th>
                        </tr>
                    </thead>
                    <tbody id="Entrust_List">
                    </tbody>
                </table>
                <table id="OrderAsk" class="table table-striped">
                    <h5 class="fw-bold">已接受委託:</h5>
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">委託名稱</th>
                            <th scope="col">委託人</th>
                            <th scope="col">委託日期</th>
                            <th scope="col">委託狀態</th>
                            <th scope="col">價格</th>
                            <th scope="col">                </th>
                        </tr>
                    </thead>
                    <tbody id="EntrustOrders_List">
                    </tbody>
                </table>
            </div>
            <div id="EventData">
                <h5 class="fw-bold">活動:</h5>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">活動名稱</th>
                            <th scope="col">開始日期</th>
                            <th scope="col">結束日期</</th>
                            <th scope="col">                </th>
                            <th scope="col">                </th>
                        </tr>
                    </thead>
                    <tbody id="Event_List">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">委託確認</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="OrderDescriptionAuthor" class="modal-body">
            </div>
            <div id="StatusReply"  class="modal-footer">
                <button id=""onclick="" type="button" class="btn btn-secondary" data-bs-dismiss="modal">拒絕</button>
                <button id="" onclick="" type="button" class="btn btn-primary" data-bs-dismiss="modal">接受</button>
            </div>
        </div>
    </div>
</div>

<!-- 密碼變更Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">密碼變更</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><label for="NewPasswd">請輸入新密碼:</label></p>
                <p><input id="NewPasswd" name="Passwd" type="password"></p>
                <p><label for="CheckNewPasswd">請再次確認並輸入新密碼:</label></p>
                <p><input id="CheckNewPasswd" name="Passwd" type="password"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                <button type="button" class="btn btn-primary" onclick="ChangePwd()">確認變更</button>
            </div>
        </div>
    </div>
</div>

<!-- 成為創作者Modal -->
<div class="modal fade" id="UserToCreatorModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="UserToCreatorModalLabel">是否成為創作者</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><label for="CreatorDes">創作者描述: </label></p>
                <p><textarea id="CreatorDes" name="CreatorNot" type="text" rows="5" class="d-block"></textarea></p>
                <p><label for="CreatorNot">創作者須知: </label></p>
                <p><textarea id="CreatorNot" name="CreatorNot" type="text" rows="5" class="d-block"></textarea></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">還在考慮</button>
                <button class="btn btn-primary" id="CreatorIDCheck" onclick=" CreatorIDCheck(true)" data-bs-toggle="pill" data-bs-target="#ConsumptionRecord_Project" type="button" role="tab" aria-controls="ConsumptionRecord_Project" aria-selected="false">確認成為創作者</button>
            </div>
        </div>
    </div>
</div>



<script src="/js/yhu/Individual.js"></script>

