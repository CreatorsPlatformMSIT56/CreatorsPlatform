                        <div id="Woklist3text" class="carousel-caption d-none d-md-block TextDiv">
                            @if (ViewBag.DefaultContentsData != null
                            && ViewBag.DefaultContentsData.Count > 2
                            && ViewBag.DefaultContentsData[2] != null
                            && ViewBag.DefaultContentsData[2].Title != null
                            && ViewBag.DefaultContentsData[2].UploadDate != null
                            )
                            {
                                <h3 class="text-center fw-bold GrayText">@ViewBag.DefaultContentsData[2].Title</h3>
                                <h5 class="text-end pe-3 GrayText">@ViewBag.DefaultContentsData[2].UploadDate</h5>
                            }
                            else
                            {
                            }
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
    <div id="Sidebar" class="col-md-4 me-2 ms-2">
        <div id="Userlist" class="border row">
            <div id="UserlistDetail" class="card mb-3 border-0 shadow p-2">
                @{int UserCount = 1;string BgClass;}
                @foreach (var item in ViewBag.AuthorProfile)
                {
                    if (UserCount % 2 == 1)
                    {
                        BgClass = "bg-info bg-opacity-10";
                    }
                    else
                    {
                        BgClass = "";
                    }
                    <div id="@item.UserId" class="row border border-2 @BgClass" onclick="WorkChanges(this)">
                        <div class="col-md-4 d-flex align-items-center justify-content-center">
                            @if (item.Avatar != null)
                            {
                                <img src="data:image/png;base64,@item.Avatar" class="UserIcon rounded-2 CreaterChangePart" alt="...">
                            }
                            else
                            {
                                <img src="/img/Shared/person-circle.svg" class="UserIcon rounded-2 CreaterChangePart" alt="...">
                            }
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <a asp-route-id="@item.CreatorId" asp-action="Index" asp-controller="Creator">
                                    <h5 class="card-title">@item.UserName</h5>
                                </a>
                                <p class="card-text">@item.Description</p>
                            </div>
                        </div>
                    </div>
                    
                    UserCount++;
                }
            </div>
        </div>
        <div class="row mt-2">
            <h3>最新活動</h3>
        </div>
        <div class="row image-containerEvent">
            <a asp-route-id="@ViewBag.EventDataList[0].EventId" asp-action="EventContent" asp-controller="Lolm">
                <img class="image-containerEventImg d-block EveImg" src="@ViewBag.EventDataList[0].Banner">
            </a>
        </div>
        <hr />
        <div class="row image-containerEvent">
            <a asp-route-id="@ViewBag.EventDataList[1].EventId" asp-action="EventContent" asp-controller="Lolm">
                <img class="image-containerEventImg d-block EveImg" src="@ViewBag.EventDataList[1].Banner">
            </a>
        </div>
        <hr />
        <div class="row image-containerEvent">
            <a asp-route-id="@ViewBag.EventDataList[2].EventId" asp-action="EventContent" asp-controller="Lolm">
                <img class="image-containerEventImg d-block EveImg" src="@ViewBag.EventDataList[2].Banner">
            </a>
        </div>

    </div>
</div>

