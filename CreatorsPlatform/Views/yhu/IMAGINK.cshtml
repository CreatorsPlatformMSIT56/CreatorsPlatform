                        && ViewBag.DefaultContentsData.Count > 2
                        && ViewBag.DefaultContentsData[2] != null
                        && ViewBag.DefaultContentsData[2].Title != null
                        && ViewBag.DefaultContentsData[2].UploadDate != null)
                        {
                            <div onclick="WokLink(@ViewBag.DefaultContentsData[2].ContentId)" class="ToMiddle image-container">
