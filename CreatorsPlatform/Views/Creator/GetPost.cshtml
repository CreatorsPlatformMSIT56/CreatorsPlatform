                            <h5 class="card-title">
                                @e.PlanName
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                @e.Description
                            </h6>
                            <p class="card-text plan-price">
                                @e.PlanPrice.ToString("C0")
                            </p>
