        <!-- aside -->
        <div class="col-3" style="border:solid">
            <div class="row">
                <h3>訂閱方案: </h3>
                @foreach (var e in Model.Plans)
                {
                <div class="col-12">
                    <div class="card mb-3">
                        @* <img class="card-img-top"
                    src="https://fakeimg.pl/500/"
                    alt="Card image cap"
