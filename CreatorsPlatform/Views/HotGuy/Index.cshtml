@model IEnumerable<CreatorsPlatform.Models.Event>

@{
    ViewData["Title"] = "Index";

    var result = (from e in Model
                  orderby e.StartDate
                  select e).Take(3);

    var query = from c in Model
                where c.EventId == 1
                select c;
}
﻿<style>


     #AAA,
     #BBB,
     #CCC {
         /* max-height: inherit; */
         height: 40vh !important;
     }

     .listImg {
         height: 80px !important;
         width: 80px !important;
     }

     h3 {
         display: inline-block;
     }

     .EventDes {
         display: inline-block;
         width: 70%;
     }

     .EventEndDate {
         float: right;
     }

     .evtTitle {
         height: 4vh;
         background-color: red;
         width: 1vh;
         display: inline-block;
     }

     .evtStatus {
         font-size: 3.5vh;
         display: inline-block;
     }
</style>

<div>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img id="AAA" style="height: inherit;"
                     src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRMUHgYBS5ZRH9pdYeL-SbQr3yLXy6taalPzBgBeVJOlQ&s"
                     class="d-block w-100" alt="eoijwpeifjsj">
                <div class="carousel-caption d-none d-md-block">
                    <h5>First slide label</h5>
                    <p>Some representative placeholder content for the first slide.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img id="BBB" src="https://whitescreen.online/image/pink-background.png" class="d-block w-100"
                     alt="eoijwpeifjsj">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Second slide label</h5>
                    <p>Some representative placeholder content for the second slide.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img id="CCC" src="https://i.pinimg.com/originals/e2/41/33/e2413303956e5a579dde0f4a896e90c3.png"
                     class="d-block w-100" alt="eoijwpeifjsj">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Third slide label</h5>
                    <p>Some representative placeholder content for the third slide.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <br />
    <div>
        <div class="evtTitle"></div>
        <p class="evtStatus">最新活動</p>
        <ul class="list-group">
            @foreach (var item in result)
            {
                <li class="list-group-item" position-relative m-4>
                    <img class="listImg float-md-start me-md-3" src="https://via.placeholder.com/80x80" />
                    <h3>
                        <span>
                            <a asp-controller="Lolm" asp-action="EventContent" asp-route-id="@item.EventId">
                                @Html.DisplayFor(modelItem => item.EventName)
                            </a>
                        </span>
                    </h3>
                    <br />
                    <p class="EventDes">@Html.DisplayFor(modelItem => item.Description)</p>
                    <p class="EventEndDate">@Html.DisplayFor(modelItem => item.EndDate)</p>
                </li>
            }
        </ul>
    </div>
    <br />

    <div>
        <div class="evtTitle"></div>
        <p class="evtStatus">進行中活動</p>
        <ul class="list-group">
            <li class="list-group-item" position-relative m-4>
                <img class="listImg float-md-start me-md-3" src="https://via.placeholder.com/80x80" />
                <h3><span>@Html.DisplayFor(query => query.FirstOrDefault().EventName)</span></h3><br />
                <p class="EventDes">Insert Event Description</p>
                <p class="EventEndDate">截止日期</p>
            </li>

            <li class="list-group-item" position-relative m-4>
                <img class="listImg float-md-start me-md-3" src="https://via.placeholder.com/80x80" />
                <h3><span>Insert Event Name</span></h3><br />
                <p class="EventDes">Insert Event Description</p>
                <p class="EventEndDate">截止日期</p>
            </li>
            <li class="list-group-item" position-relative m-4>
                <img class="listImg float-md-start me-md-3" src="https://via.placeholder.com/80x80" />
                <h3><span>Insert Event Name</span></h3><br />
                <p class="EventDes">Insert Event Description</p>
                <p class="EventEndDate">截止日期</p>
            </li>
        </ul>
    </div>
    <br />
    <div>
        <div class="evtTitle"></div>
        <p class="evtStatus">即將結束活動</p>
        <ul class="list-group">
            <li class="list-group-item" position-relative m-4>
                <img class="listImg float-md-start me-md-3" src="https://via.placeholder.com/80x80" />
                <h3><span>Insert Event Name</span></h3><br />
                <p class="EventDes">Insert Event Description</p>
                <p class="EventEndDate">截止日期</p>
            </li>

            <li class="list-group-item" position-relative m-4>
                <img class="listImg float-md-start me-md-3" src="https://via.placeholder.com/80x80" />
                <h3><span>Insert Event Name</span></h3><br />
                <p class="EventDes">Insert Event Description</p>
                <p class="EventEndDate">截止日期</p>
            </li>
            <li class="list-group-item" position-relative m-4>
                <img class="listImg float-md-start me-md-3" src="https://via.placeholder.com/80x80" />
                <h3><span>Insert Event Name</span></h3><br />
                <p class="EventDes">Insert Event Description</p>
                <p class="EventEndDate">截止日期</p>
            </li>
        </ul>
    </div>

</div>