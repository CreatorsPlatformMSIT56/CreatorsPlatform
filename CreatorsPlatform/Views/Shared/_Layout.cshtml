				<li class="nav-item" id="MemberSection">
					@if (ViewBag.MembersOnline)
					{
						<a href="/yhu/PersonalUser" class="MemberDropdown">
							@if (ViewBag.MembersIcon != null)
							{
								<img style="width: 65px; height: 65px;" src="data:image/png;base64,@ViewBag.MembersIcon" class="rounded-2 rounded-circle" alt="...">
							}
							else
							{
								<svg xmlns="http://www.w3.org/2000/svg" width="65" height="65" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
									<path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
									<path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
