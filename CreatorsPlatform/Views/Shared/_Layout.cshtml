	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script>
		function UserLogOut() {
			$.ajax({
				url: '/yhu/LogOut',
				method: 'POST',
				data: {
				},
				success: function (response) {
					window.location.href = '/yhu/IMAGINK';
				}
			});
		};
	</script>

